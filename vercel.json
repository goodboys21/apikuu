{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "docs/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "app.js" },

    // handle /docs (tanpa slash)
    { "src": "/docs", "dest": "docs/index2.html" },

    // handle /docs/xxx (dengan slash)
    { "src": "/docs/(.*)", "dest": "docs/index2.html" },

    { "src": "/(.*)", "dest": "public/index.html" }
  ]
}
